<html> 
    <head>
        <title>Collections</title>
    </head>
    <body>
        <h1>Descriptions of Collections</h1>

        {% if descriptions is not empty %}
            <p>Here are all your descriptions:</p>
            <ul>
            {% for description in descriptions %}
                <li>{{ description.getDetail }}</li>
            {% endfor %}
            </ul>
        {% endif %}

        <form action='/descriptions' method='post'>
            <label for='description'>Description</label>
            <input id='description' name='description' type='text'>

            <button type='submit'>Add details</button>
        </form>
        <form action='/delete_descriptions' method='post'>
            <button type='submit'>Clear</button>
        </form>

        <p><a href='/'>Home</a></p>
    </body>
</html>
